<UserControl x:Class="MessagesSymulator.Controls.ImageButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MessagesSymulator.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             MouseEnter="Button_MouseEnter"
             MouseLeave="Button_MouseLeave"
             MouseLeftButtonDown="Button_Click"
             Loaded="UserControl_Loaded">
    <Border Name="BorderImage" CornerRadius="3">
        <Grid>
            <Image x:Name="ButtonImage" VerticalAlignment="Center" HorizontalAlignment="Center"
                    RenderOptions.BitmapScalingMode="HighQuality"/>
        </Grid>
    </Border>
</UserControl>
